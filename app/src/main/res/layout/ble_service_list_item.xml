<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/peripheral_list_services_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:text="@string/service_name_initial"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/peripheral_list_services_uuid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/peripheral_list_services_name"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="7dp"
        android:text="@string/peripheral_uuid_initial"
        android:textColor="@color/very_dark_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/peripheral_list_service_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        android:text="@string/service_type_primary"
        android:textColor="@color/very_dark_gray"
        android:textSize="18sp" />

</RelativeLayout>
