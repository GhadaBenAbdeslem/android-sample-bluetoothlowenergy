<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/dark_gray"/>
			<stroke android:width="4px" android:color="@color/very_dark_gray"/>
		</shape>
	</item>
	<item android:state_selected="true" >
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/green"/>
			<stroke android:width="4px" android:color="@color/light_yellow"/>
		</shape>
	</item>
	<item android:state_checked="true" >
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/green"/>
			<stroke android:width="4px" android:color="@color/light_yellow"/>
		</shape>
	</item>
	<item android:state_focused="true" > 
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/dark_gray"/>
			<stroke android:width="4px" android:color="@color/very_dark_gray"/>
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/disabled_gray"/>
			<stroke android:width="4px" android:color="@color/white"/>
		</shape>
	</item>
	<item android:state_checked="false" >
		<shape xmlns:android="http://schemas.android.com/apk/res/android">
			<solid android:color="@color/green"/>
			<stroke android:width="4px" android:color="@color/disabled_gray"/>
		</shape>
	</item>
</selector>